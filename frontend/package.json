    "**/*.{js,ts,vue,html}": [
      "pnpm lintfix"
    ]
  },
  "pnpm": {
    "overrides": {
      "parse-url@<8.1.0": ">=8.1.0",
      "loader-utils@>=2.0.0 <2.0.3": ">=2.0.3",
